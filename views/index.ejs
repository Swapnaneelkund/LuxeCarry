<%- include('./partials/header') %>

<div class="min-h-screen flex flex-col md:flex-row px-5 md:px-20">
    <!-- Error Message -->
    <% if (error.length > 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block text-white">
                <%= error %>
            </span>
        </div>
    <% } %>

    <!-- Registration Form Section -->
    <div class="w-full md:w-1/2 flex items-center justify-center py-10">
        <div class="w-full px-5 sm:px-10 md:px-16 lg:px-20">
            <h3 class="text-3xl md:text-4xl font-semibold">
                Welcome to <span class="text-blue-400">LuxeCarry</span>
            </h3>
            <h4 class="text-lg md:text-xl mt-3 mb-5">Create Your Account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="Full Name" name="fullname">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input
                    class="block w-full px-5 py-2 bg-blue-500 text-white rounded-full hover:bg-blue-600 cursor-pointer"
                    type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Form Section -->
    <div class="w-full md:w-1/2 flex items-center justify-center py-10">
        <div class="w-full px-5 sm:px-10 md:px-16 lg:px-20">
            <h4 class="text-lg md:text-xl mb-5">Login to Your Account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input
                    class="block w-full px-5 py-2 bg-blue-500 text-white rounded-full hover:bg-blue-600 cursor-pointer"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<!-- Single Google Login Button -->
<div class="w-full flex items-center justify-center py-10">
    <a href="/users/auth/google" class="block w-full max-w-xs px-5 py-2 bg-red-500 text-white rounded-full hover:bg-red-600 text-center cursor-pointer">
        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" class="inline-block w-5 h-5 mr-2">Continue with Google
    </a>
</div>

<%- include('./partials/footer') %>