<%- include('./partials/header') %>
<div class="w-full min-h-screen flex flex-col items-start px-20 py-20 gap-10 bg-gray-50">
 <h1 class="text-3xl p-8 text-center w-full"><strong>YOUR ORDERS</strong></h1>

    <div class="w-full flex flex-col lg:flex-row gap-10">
        <!-- Product Grid Section -->
        <div class="w-full rounded-md overflow-hidden ">
            <% if (orders && orders.length > 0) { %>
                <!-- Responsive Product Grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
                    <% orders.forEach(function(product) { %>
                        <div class="w-full bg-white shadow-md rounded-md overflow-hidden relative transform transition duration-300 ease-in-out hover:scale-105 hover:shadow-xl">
                            <!-- Product Image -->
                            <div class="w-full h-52 flex items-center justify-center " style="background-color: <%=product.bgcolor%>;">
                                <img class="h-[12rem]" src="<%= product.image %>" alt="<%= product.name %>">
                            </div>
                            <!-- Product Details -->
                            <div class="flex justify-between  items-center px-4 py-4 text-[<%= product.textcolor %>]" style="background-color: <%=product.panelcolor%>;">
                                <div class="w-full">
                                    <h3 class="text-lg font-bold text-center"><%= product.name %></h3>
                                    <h4 class="text-md w-full text-right"><%= product.quantity %></h4>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <!-- No Products Message -->
                <div class="w-full h-full flex flex-col items-center justify-center">
                    <h2 class="text-xl font-bold">No Products Available</h2>
                    <p class="text-gray-500 mt-2">Please Shop</p>
                </div>
            <% } %>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>