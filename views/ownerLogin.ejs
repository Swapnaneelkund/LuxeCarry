<%- include('./partials/header') %>
<div class="w-full flex items-center justify-center min-h-screen">
  <div class="w-full px-4 w-[80%] ">
    <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
    <form action="/owners/login" class="flex flex-col md:w-[38%] w-[95%]" method="post">
      <input class="bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200"
        type="email" placeholder="Email" name="email">
      <input class="bg-zinc-100 w-full px-3 py-2 border rounded-md mb-3 border-zinc-200"
        type="password" placeholder="Password" name="password">
      <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
    </form>
  </div>
</div>

<%- include('./partials/footer') %>