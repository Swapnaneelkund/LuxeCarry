<%- include('./partials/header') %>
    <% if (error.length > 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block text-white">
                <%= error %>
            </span>
        </div>
    <% } %>
<div class="w-full h-screen flex px-20">
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32">
            <h4 class="text-2xl capitalize mb-5">Owner Registration</h4>
            <form action="/owners/register/create" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="text" placeholder="FullName" name="fullname">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Register">
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
